<!DOCTYPE html>
<html>
<head>
  <title>CurryNation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- Static navbar -->
	<div class="row">
		<div class="navbar navbar-static-top">
			<div class="container">
				<button type="button", class="navbar-toggle",
				 data-toggle="collapse", data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand", href="#">
					<%= image_tag "logo.jpg" %>
				</a>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li class="active"><%= link_to "Recipes", recipes_path %></li>
					</ul>
					<ul class="nav navbar-nav pull-right">
						<% if user_signed_in? %>
							<li><%= link_to "#{current_user.email}" %></li>
							<li class="active"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
						<% else %>
							<li><%= link_to "Login", new_user_session_path %></li>
							<li class="active"><%= link_to "SignUp", new_user_registration_path %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-2">
			<% sidebar_values %>
			
			<%= form_tag(recipes_path, method: :get) do %>
				<div class="panel panel-primary" id="panels">
					<div class="panel-heading">Food Preferences</div>
					<p><%= radio_button_tag 'food_preferences', '0', true %>All</p>
					<% @food_preferences.each do |fp| %>
						<p><%= radio_button_tag 'food_preferences', fp.id %><%= fp.name %></p>
					<% end %>
					
					<div class="panel-heading">Food Types</div>
					<p><%= radio_button_tag 'food_types', '0', true %>All</p>
					<% @food_types.each do |ft| %>
						<p><%= radio_button_tag 'food_types', ft.id %><%= ft.name %></p>
					<% end %>
					
					<div class="panel-heading">Cuisines</div>
					<p><%= radio_button_tag 'cuisines', '0', true %>All</p>
					<% @cuisines.each do |c| %>
						<p><%= radio_button_tag 'cuisines', c.id %><%= c.name %></p>
					<% end %>
					
					<%= submit_tag("Filter") %>
				</div>
			<% end %>
		</div>
		<div class="col-lg-9">
			<% if notice %>
				<p class="notice"><%= notice %></p>
			<% end %>
			<% if alert %>
				<p class="alert"><%= alert %></p>
			<% end %>
			<%= yield %>
		</div>
	</div>
</body>
</html>
